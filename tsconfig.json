{
  "compilerOptions": {
      "outDir": "./dist",
      "baseUrl": ".",
      "sourceRoot": "./src",
      "allowJs": false,
      "declaration": true,
      "checkJs": false,
      "module": "commonjs",
      "target": "es2017",
      "sourceMap": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "include": [
      "src",
      "typings"
  ],
  "exclude": [
      "node_modules",
  ]
}